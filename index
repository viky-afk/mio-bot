    <script>
        const tg = window.Telegram.WebApp;
        tg.expand(); // Espande l'app a tutto schermo

        // Prende i dati dell'utente direttamente da Telegram
        const user = tg.initDataUnsafe?.user;
        if (user) {
            document.getElementById('user-name').innerText = user.first_name + " " + (user.last_name || "");
            document.getElementById('user-initial').innerText = user.first_name.charAt(0).toUpperCase();
        }

        tg.ready();
    </script>
