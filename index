<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digital Card</title>
    <!-- Script fondamentale per comunicare con Telegram -->
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Adattiamo i colori al tema dell'utente (chiaro/scuro) */
        body {
            background-color: var(--tg-theme-bg-color, #f5f5f5);
            color: var(--tg-theme-text-color, #222);
        }
        .card {
            background-color: var(--tg-theme-secondary-bg-color, #fff);
        }
    </style>
</head>
<body class="p-6 flex flex-col items-center justify-center min-h-screen">

    <div class="card w-full max-w-md rounded-3xl p-8 shadow-2xl text-center border border-gray-100">
        <!-- Foto Profilo -->
        <div class="w-24 h-24 bg-gradient-to-tr from-blue-500 to-purple-600 rounded-full mx-auto mb-4 flex items-center justify-center text-white text-3xl font-bold shadow-inner">
            <span id="initials">?</span>
        </div>
        
        <h1 id="user-name" class="text-2xl font-extrabold mb-1">Utente</h1>
        <p class="text-blue-500 font-medium mb-6">Developer & Creative</p>

        <div class="grid grid-cols-1 gap-4 w-full">
            <button onclick="sendContact()" class="w-full py-4 rounded-2xl bg-blue-600 text-white font-bold hover:bg-blue-700 transition transform active:scale-95 shadow-lg">
                üì≤ Condividi Contatto
            </button>
            
            <a href="https://maps.app.goo.gl/esempio" target="_blank" class="w-full py-4 rounded-2xl bg-white border-2 border-gray-200 font-bold hover:border-blue-500 transition text-center">
                üìç Dove Sono
            </a>
        </div>

        <button onclick="tg.close()" class="mt-8 text-sm text-gray-400 font-medium hover:text-gray-600">
            Chiudi Schermata
        </button>
    </div>

    <script>
        // Inizializziamo la WebApp
        const tg = window.Telegram.WebApp;
        tg.expand(); // Espande l'app a tutto schermo

        // Recuperiamo i dati dell'utente da Telegram
        const user = tg.initDataUnsafe?.user;
        if (user) {
            document.getElementById('user-name').innerText = user.first_name + " " + (user.last_name || "");
            document.getElementById('initials').innerText = user.first_name.charAt(0).toUpperCase();
        }

        function sendContact() {
            // Possiamo inviare dati dalla WebApp indietro al Bot
            const data = { action: 'share_contact', user: user?.first_name };
            tg.sendData(JSON.stringify(data)); 
            // Nota: sendData funziona solo se l'app √® aperta tramite un bottone della tastiera
            tg.close();
        }

        // Impostiamo il colore del bottone principale di sistema (quello in basso di Telegram)
        tg.MainButton.setText("CONTATTAMI ORA");
        tg.MainButton.show();
        tg.MainButton.onClick(() => {
            tg.openTelegramLink('https://t.me/tuo_username');
        });

        tg.ready();
    </script>
</body>
</html>
